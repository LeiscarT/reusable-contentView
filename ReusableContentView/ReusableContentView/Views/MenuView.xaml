<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReusableContentView.Views.MenuView">
    <StackLayout>
        <Image Source="{Binding Image}" Style="{StaticResource ImageItem}"/>
        <Label Text="{Binding Title}" Style="{StaticResource TitleLabel}"></Label>
        <Label Text="{Binding Detail}" Style="{StaticResource DetailLabel}"></Label>
    </StackLayout>
</Frame>